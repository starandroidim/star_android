<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="156pt"
    android:layout_marginTop="60pt"
    android:background="@drawable/special_tab_bg"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100pt"
        android:layout_height="100pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21pt"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PingFangSC-Regular"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_marginBottom="12pt"
        android:layout_gravity="bottom|center_horizontal"
        />

    <me.majiajie.pagerbottomtabstrip.internal.RoundMessageView
        android:id="@+id/messages"
        android:layout_width="60pt"
        android:layout_height="60pt"
        android:translationX="36pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9pt"
        />

</FrameLayout>





